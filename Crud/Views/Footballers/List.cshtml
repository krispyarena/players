@{
}

@model List<Crud.Models.Entities.Footballers>

<h1>Footballers</h1>
<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Country</th>
            <th>Goals</th>
            <th>Email</th>
            <th>Action</th>
        </tr>
    </thead>

    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.PlayerId</td>
                <td>@item.Name</td>
                <td>@item.Country</td>
                <td>@item.Goals</td>
                <td>@item.Email</td>
                <td>
                    <a class="btn btn-info" asp-action="Update" asp-controller="Footballers" asp-route-id="@item.PlayerId">Update</a>
                </td>
            </tr>

        }
    </tbody>
</table>