@{
}

@model Crud.Models.Entities.Footballers

<h1>Update Footballer</h1>

@if(Model is null)
{
    <p>No Footballer found with this id</p>
}

else
{
    <form method="post" asp-action="Add" asp-controller="Footballers">

        <div class="mt-3">
            <label class="form-label">ID</label>
            <input type="text" class="form-control" asp-for="PlayerId" readonly/>
        </div>
        <div class="mt-3">
            <label class="form-label">Name</label>
            <input type = "text" class= "form-control" asp-for="Name"/>
        </div>

        <div class="mt-3">
            <label class="form-label">Goals</label>
            <input type = "number" class= "form-control" asp-for="Goals"/>
        </div>

        <div class="mt-3">
            <label class="form-label">Country</label>
            <input type="text" class="form-control" asp-for="Country"/>
        </div>

        <div class="mt-3">
            <label class="form-label">Email</label>
            <input type="email" class="form-control" asp-for="Email"/>
        </div>

        <div class="mt-3">
            <input type="checkbox" class="form-check-input" id="IsSubscribed" asp-for="IsSubscribed"/>
            <label class="form-check-label" for="IsSubscribed">Is Subscribed</label>
        </div>

        <div class="mt-3">
            <button type="submit" class="btn btn-info">Update</button>
            <button type="submit" class="btn btn-danger" asp-action="Delete" asp-controller="Footballers">Delete</button>
        </div>

    </form>
}