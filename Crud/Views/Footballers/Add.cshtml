@{
}
@model Crud.Models.AddFootballersViewModel

<h1>@(Model.PlayerId == null ? "Add Footballer" : "Update Footballer")</h1>
<form method="post">
    <input type="hidden" asp-for="PlayerId" />
    <div class="mt-3">
        <label class="form-label">Name</label>
        <input type="text" class="form-control" asp-for="Name" />
    </div>
    <div class="mt-3">
        <label class="form-label">Goals</label>
        <input type="number" class="form-control" asp-for="Goals" />
    </div>
    <div class="mt-3">
        <label class="form-label">Country</label>
        <input type="text" class="form-control" asp-for="Country" />
    </div>
    <div class="mt-3">
        <label class="form-label">Email</label>
        <input type="email" class="form-control" asp-for="Email" />
    </div>
    <div class="mt-3">
        <input type="checkbox" class="form-check-input" id="IsSubscribed" asp-for="IsSubscribed" />
        <label class="form-check-label" for="IsSubscribed">Is Subscribed</label>
    </div>
    <div class="mt-3">
        <button type="submit" class="btn btn-success">Save</button>
        @if(Model.PlayerId is not null){
        <button type="submit" class="btn btn-danger" asp-action="Delete" asp-controller="Footballers">Delete</button>
        }
    </div>
</form>

